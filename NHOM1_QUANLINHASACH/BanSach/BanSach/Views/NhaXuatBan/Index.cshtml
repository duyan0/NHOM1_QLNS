@model PagedList.IPagedList<BanSach.Models.NhaXuatBan>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh Sách Nhà Xuất Bản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2 class="text-center font-weight-bold mt-3">Danh Sách Nhà Xuất Bản</h2>

<!-- Search Form -->
<div class="search-bar mb-1">
    @using (Html.BeginForm("Index", "NhaXuatBan", FormMethod.Get, new { id = "searchForm" }))
    {
        <div class="input-group mb-1">
            <input type="text" name="searchString" value="@Request.QueryString["searchString"]" class="form-control" placeholder="Tìm kiếm Nhà Xuất Bản..." />
            <div class="input-group-append">
                <button class="btn btn-dark" type="submit">Tìm kiếm</button>
            </div>
        </div>
    }
</div>

<!-- Add New Publisher Button -->
<p class="text-left text-white p-1">
    @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-dark rounded-sm" })
</p>

@if (Model != null && Model.Any())
{
    <!-- Publishers Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped rounded">
            <thead class="text-white" style="background-color:black;">
                <tr>
                    <th>ID</th>
                    <th>Tên nhà xuất bản</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th class="text-center">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="font-weight-bold">
                            @Html.DisplayFor(modelItem => item.IDnxb)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Tennxb)</td>
                        <td>
                            @{
                                var address = item.DiaChi;
                                string displayAddress = address.Length > 20 ? address.Substring(0, 20) + "..." : address;
                            }
                            @displayAddress
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="text-center">
                            <div>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.IDnxb }, new { @class = "btn btn-warning btn-sm me-1 rounded-sm" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDnxb }, new { @class = "btn btn-info btn-sm me-1 rounded-sm" })
                                @Html.ActionLink("Xoá", "Delete", new { id = item.IDnxb }, new { @class = "btn btn-danger btn-sm me-1 rounded-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination Controls -->
    <div class="pagination-container">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = Request.QueryString["searchString"] }),
            new PagedListRenderOptions
            {
                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToIndividualPages = true,
                MaximumPageNumbersToDisplay = 5
            })
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        Không có Nhà Xuất Bản nào trong hệ thống.
    </div>
}

<!-- Custom CSS for Consistent Button Sizing -->
<style>
    /* Rounded corners for table and buttons */
    .rounded {
        border-radius: 0.25rem;
    }

    /* Table display */
    .table {
        margin-top: 1rem;
        font-size: 0.95rem;
    }

    /* Header styling */
    .thead-dark th {
        text-align: center;
        vertical-align: middle;
    }

    /* Table cell styling */
    td, th {
        text-align: left;
        vertical-align: middle;
    }

    /* Button sizing and alignment */
    .btn {
        min-width: 80px;
    }

    /* Padding for the "Add New" button */
    .text-right .btn {
        margin-bottom: 1rem;
    }

    /* Button group spacing */
    .btn-group {
        gap: 5px; /* Space between buttons */
    }

    .pagination-container {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .search-bar {
        max-width: 400px;
        margin: 0 auto 20px auto;
    }
</style>
