@model BanSach.Models.SanPham

@{
    ViewBag.Title = "Sách - " + Model.TenSP;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/admin.css" rel="stylesheet" />
<style>
    .container-fluid {
        /* Không thay đổi */
    }

    .left, .right {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .left {
        flex: 1;
        max-width: 30%;
        min-width: 280px;
        transition: transform 0.3s;
    }

        .left:hover {
            transform: scale(1.02);
        }

    .right {
        flex: 2;
        color: #333;
        margin-left: 20px;
        max-width: 65%;
    }

    .anh img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .price {
        color: #c92127;
        letter-spacing: 2px;
        font-size: x-large;
    }

    .nut {
        text-align: center;
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }

        .nut a {
            border: 2px solid #c92127;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s, transform 0.3s ease;
            padding: 15px 30px;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

    #nut1 {
        color: #c92127;
        background-color: white;
    }

        #nut1:hover {
            background-color: #c92127;
            color: white;
            transform: translateY(-3px);
        }

    #nut2 {
        background-color: #c92127;
        color: white;
    }

        #nut2:hover {
            background-color: #a81d22;
            transform: translateY(-3px);
        }

    #notification {
        display: none;
        position: fixed;
        top: 10%;
        right: 5%;
        background-color: #4caf50;
        color: white;
        padding: 15px;
        border-radius: 5px;
        font-size: 16px;
        z-index: 1000;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

        #notification.show {
            display: block;
            opacity: 1;
        }

        #notification.hide {
            opacity: 0;
        }
</style>

<div class="container-fluid d-flex flex-wrap" id="productdetails">
    <div class="left">
        <div class="anh">
            <img src="~/Content/img/@Model.HinhAnh" class="rounded-sm" />
        </div>
        @if (@Model.TrangThaiSach == "Còn hàng" && @Model.SoLuong > 0)
        {
            <div class="nut mt-4">
                <a href="/ShoppingCart/AddToCart/@Model.IDsp" id="nut1" onclick="themthanhcong(event, '@Model.IDsp')">
                    <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                </a>
                <a href="/ShoppingCart/MuaNgay/@Model.IDsp" id="nut2">
                    <i class="fas fa-bolt"></i> Mua ngay
                </a>
            </div>
        }
        else
        {
            <div class="text-danger mt-4">
                <strong>Sản phẩm này hiện đã hết hàng. Vui lòng quay lại sau!</strong>
            </div>
        }
    </div>
    <div class="right">
        <div class="column">
            <p style="font-size:30px;" class="text-center"><b>@Model.TenSP</b></p>
            <p>Tác giả: <b>@Model.TacGia.TenTacGia</b></p>
            <p>Nhà xuất bản: <b>@Model.NhaXuatBan.Tennxb</b></p>
            <p>Thể loại: <b>@Model.DanhMuc.TheLoai</b></p>
            <p>Giá khuyến mãi: <b style="color:red;">@Model.KhuyenMai.MucGiamGia%</b></p>
            <p>
                Giá tiền:
                <b style="color:red;">@String.Format("{0:N0}", @Model.GiaBan) VND</b>
            </p>
            <p>Mô tả: <b>@Model.MoTa</b></p>
        </div>

        <div id="notification">Thêm vào giỏ hàng thành công!</div>
    </div>
</div>

<script>
    function themthanhcong(event, productId) {
        // Ngăn chặn điều hướng ngay lập tức
        event.preventDefault();

        var notification = document.getElementById("notification");

        // Hiển thị thông báo
        notification.classList.add("show");
        notification.classList.remove("hide");

        // Ẩn thông báo sau 3 giây
        setTimeout(function () {
            notification.classList.add("hide");
            setTimeout(function () {
                notification.classList.remove("show", "hide");

                // Điều hướng tới URL sau khi thông báo ẩn
                window.location.href = "/ShoppingCart/AddToCart/" + productId;
            }, 500);
        }, 1000); // Hiển thị thông báo trong 3 giây
    }
</script>
