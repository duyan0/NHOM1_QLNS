@model IEnumerable<BanSach.Models.DanhMuc>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center font-weight-bold text-dark">Danh mục sách</h2>

<div class=" mb-4">
    @Html.ActionLink("Thêm ", "Create", null, new { @class = "btn btn-dark  rounded-sm" })
</div>

<table class="table table-striped table-condensed">
    <thead class="thead-dark">
        <tr>
            <th style="border-top-left-radius: 25px;">Danh mục</th>
            <th>Thể loại</th>
            <th style="border-top-right-radius: 25px;">Chỉnh sửa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhMuc1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheLoai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm me-1 rounded-sm" }) 
                    @Html.ActionLink("Xem", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm me-1 rounded-sm" }) 
                    @Html.ActionLink("Xoá", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm delete-link rounded-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


