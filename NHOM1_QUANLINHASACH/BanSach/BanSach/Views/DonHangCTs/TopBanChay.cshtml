@model IEnumerable<BanSach.Models.ViewModel>

<div class="container-fluid">
    <p class="text-center text-white font-weight-bold mb-3"style="font-size: 26px;">Sản phẩm bán chạy</p>

    <!-- Cấu trúc để chia carousel thành 6 cột -->
    <div class="row">
        <div class="col-sm-12">
            <div class="owl-carousel related-carousel owl-theme">
                @foreach (var i in Model)
                {
                    <div class="item">
                        <div class="card bg-white" style="max-height: 330px; min-height: 300px; max-width: 300px; ">
                            <a href="~/SanPhams/TrangSP/@i.IdPro" style="text-decoration:none;">
                                <div class="card-body" id="topbanchay">
                                    <img src="https://placehold.co/250x200" alt="@Html.DisplayFor(model => i.NamePro)" id="img" class="text-center">
                                    <p class="text-left text-dark text-truncate"title="@i.NamePro">@i.NamePro</p>
                                    <p style="color:red;" class="font-weight-bold text-left"title="@i.price">
                                        @string.Format("{0:N0} VND", i.price)
                                    </p>
                                    <p class="text-center mt-2 text-white text-truncate bg-danger" style="border-radius:10px;font-size:14px;"title="@i.Sum_Quantity">Đã bán: @i.Sum_Quantity</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="bg-secondary">
    <hr />
</div>

<style>
    
    /* Cấu hình cho owl-carousel */
    .owl-carousel .item {
        width: 100%; /* Mỗi item chiếm 1/6 chiều rộng của container (6 items trên 1 hàng) */
        padding: 5px; /* Thêm khoảng cách giữa các item */
        box-sizing: border-box; /* Đảm bảo padding không làm ảnh hưởng đến chiều rộng */
    }

    /* Cố định chiều cao cho các hình ảnh */
    #img {
        max-height: 200px; /* Cố định chiều cao cho hình ảnh */
        max-width: 250px;  /* Đảm bảo hình ảnh không bị méo */
        border-radius: 8px; /* Làm mượt các góc của ảnh */
    }

    /* Cố định chiều cao cho các card */
    .owl-carousel .card {
        height: 330px; /* Chiều cao cố định cho mỗi card */
        border: 1px solid #ddd; /* Viền nhẹ cho card */
        border-radius: 8px; /* Làm mượt các góc của card */
    }

    /* Đảm bảo khoảng cách giữa các thẻ p trong card */
    .owl-carousel .card-body p {
        text-align: left;
        margin-top: 5px;
        font-size: 16px;
    }

    /* Cấu hình cho carousel */
    .related-carousel .owl-stage {
        display: flex; /* Sử dụng Flexbox để các item nằm ngang */
        flex-wrap: nowrap; /* Không cho phép các item xuống dòng */
    }

    .related-carousel .owl-nav {
        display: none; 
    }
    #topbanchay{
        padding:10px;
        width:100%;
        height:100%;
    }
</style>
