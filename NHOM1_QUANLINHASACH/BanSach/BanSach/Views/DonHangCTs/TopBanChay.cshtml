@model IEnumerable<BanSach.Models.ViewModel>

<style>
    .card a:hover {
        text-decoration: none;
    }

    .product-item {
        border-radius: 20px; /* Bo tròn góc cho thẻ sản phẩm */
        transition: transform 0.2s; /* Thêm hiệu ứng chuyển tiếp khi hover */
    }

        .product-item:hover {
            transform: scale(1.05); /* Phóng to nhẹ sản phẩm khi hover */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Thêm bóng cho sản phẩm khi hover */
        }
</style>

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="px-5">
            <span class="px-2" style="font-weight:bold;color:white;">Sản phẩm bán chạy</span>
        </h2>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var i in Model)
                {
                    <div class="card product-item">
                        <a href="~/SanPhams/TrangSP/@i.IdPro">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent rounded-sm">
                                <img class="img-fluid w-100" src="~/Content/img/@i.ImgPro" alt="@Html.DisplayFor(model => i.NamePro)">
                            </div>
                            <div class="card-body  text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@Html.DisplayFor(model => i.NamePro)</h6>
                                <div class="d-flex justify-content-center">
                                    <p style="color:red;" class="font-weight-bold">
                                        @string.Format("{0:N0} VND", i.price)
                                    </p>
                                    <h6 class="text-muted ml-2"></h6>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
