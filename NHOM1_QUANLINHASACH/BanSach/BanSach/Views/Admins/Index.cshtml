@model PagedList.IPagedList<BanSach.Models.Admin>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Xin chào";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />

<style>
    .tieude {
        text-align: center;
        font-weight: bold;
        color: #343a40;
    }

    .action-link {
        border-radius: 10px;
        color: #ffffff;
        font-size: large;
        padding: 5px 15px;
        margin: 10px;
        border: 1px solid #343a40;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .action-link:hover {
            color: #ffffff;
            background-color: #343a40;
        }

    .search-bar {
        max-width: 400px;
        margin: 0 auto 20px;
    }

    .input-group .form-control:focus {
        box-shadow: none;
        border-color: #343a40;
    }
</style>

<h2 class="tieude">Quản lí Admin</h2>

<!-- Search Bar -->
<div class="search-bar">
    @using (Html.BeginForm("Index", "Admins", FormMethod.Get, new { id = "searchForm" }))
    {
        <div class="input-group mb-1">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" id="searchInput" placeholder="Tìm kiếm Admin...">
            <button class="btn btn-dark" type="submit">Tìm kiếm</button>
        </div>
    }
</div>

<p>
    @Html.ActionLink("Thêm ", "Create", null, new { @class = "action-link btn btn-dark" })
</p>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead class="bg-dark text-white">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th>Tài khoản</th>
                <th>Mật khẩu</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.HoTen</td>
                    <td>
                        @(item.SoDT != null && item.SoDT.Length >= 3 ? item.SoDT.Substring(0, 3) + new string('*', item.SoDT.Length - 7) : "")
                    </td>
                    <td>@item.VaiTro</td>
                    <td>@item.TKhoan</td>
                    <td>******</td>
                    <td class="text-center">
                        @if (!string.Equals(item.VaiTro.Trim(), "Admin", StringComparison.OrdinalIgnoreCase))
                        {
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm rounded-sm mx-1" })
                            @Html.ActionLink("Xoá", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm rounded-sm mx-1" })
                        }
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm rounded-sm mx-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.CurrentFilter }), new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 5,
            DisplayEllipsesWhenNotShowingAllPageNumbers = true,
            DisplayLinkToIndividualPages = true
        })
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        Không có Admin nào trong hệ thống.
    </div>
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        let typingTimer;
        let debounceTime = 500;

        $('#searchInput').on('input', function () {
            clearTimeout(typingTimer);
            typingTimer = setTimeout(function () {
                $('#searchForm').submit();
            }, debounceTime);
        });
    });
</script>
