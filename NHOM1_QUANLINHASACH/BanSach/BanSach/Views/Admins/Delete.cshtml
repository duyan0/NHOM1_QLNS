@model BanSach.Models.Admin

@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Xóa tài khoản nhân sự</h3>
            <p class="text-center mb-0">Bạn có chắc chắn muốn xóa tài khoản này không?</p>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                Hành động này không thể hoàn tác.
            </div>

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold text-dark">Họ và tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDT)</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Vai trò</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VaiTro)</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Tài khoản</dt>
                <dd class="col-sm-9">******</dd>

                <dt class="col-sm-3 font-weight-bold text-dark">Mật khẩu</dt>
                <dd class="col-sm-9">******</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions mt-4 text-center">
                    <input type="submit" value="Xóa" class="btn btn-danger btn-lg me-3 shadow-sm" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary btn-lg shadow-sm" })
                </div>
            }
        </div>
    </div>
</div>
