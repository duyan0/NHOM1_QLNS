@model IEnumerable<BanSach.Models.ViewModel>

<style>
    .card a:hover {
        text-decoration: none;
    }

    .product-item {
        border-radius: 20px; /* Rounded corners for the product card */
        transition: transform 0.2s; /* Add smooth transition for hover */
    }

        .product-item:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Add shadow when hovering */
        }

    .product-img {
        text-align: center; /* Ensure the image is centered within the container */
    }

        .product-img img {
            width: 200px !important; /* Set a fixed width with !important */
            height: 200px !important; /* Set a fixed height with !important */
            object-fit: cover; /* Crop the image to fit without distortion */
            border-radius: 10px; /* Rounded corners for the image */
        }
</style>

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="px-5">
            <span class="px-2" style="font-weight:bold;color:white;">Sản phẩm bán chạy</span>
        </h2>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var i in Model)
                {
                    <div class="card product-item">
                        <a href="~/SanPhams/TrangSP/@i.IdPro">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent rounded-sm text-center">
                                <img src="~/Content/img/@i.ImgPro" alt="@Html.DisplayFor(model => i.NamePro)">
                            </div>
                            <div class="card-body text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@Html.DisplayFor(model => i.NamePro)</h6>
                                <div class="d-flex justify-content-center">
                                    <p style="color:red;" class="font-weight-bold">
                                        @string.Format("{0:N0} VND", i.price)
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
