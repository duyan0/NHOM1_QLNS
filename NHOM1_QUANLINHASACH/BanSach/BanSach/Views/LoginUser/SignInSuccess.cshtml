    <center>
        <h2 class="text-success">Chào mừng, @Session["TenKH"]! Bạn đã đăng nhập thành công!</h2> 
        <div class="mmm">
            @Html.ActionLink("Tiếp tục mua hàng", "ProductList", "SanPhams")
