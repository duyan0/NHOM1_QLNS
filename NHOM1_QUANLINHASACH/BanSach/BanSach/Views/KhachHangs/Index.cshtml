@model IEnumerable<BanSach.Models.KhachHang>

@{
    ViewBag.Title = "Quản lý danh sách khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .tieude {
        text-align: center;
        font-weight: bold;
    }

    .them a {
        border-radius: 10px;
        background-color: #212121;
        color: white;
        font-size: large;
        padding: 5px;
        margin: 50px 10px 0 10px;
    }

        .them a:hover {
            text-decoration: none;
            color: white;
            background-color: #027171;
        }

    .table-striped {
        width: 100%;
    }
</style>

<h2 class="tieude">Danh sách khách hàng</h2>

<p class="them">
    @Html.ActionLink("Thêm khách hàng", "Create")
</p>
<table class="table table-condensed" width="100%">
    <tr style=" color: black; text-align: left;">
        <th style="border-top-left-radius: 25px;">
            Tên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Tài khoản
        </th>
        <th>
            Mật khẩu
        </th>
        <th style="border-top-right-radius: 25px;">Chỉnh sửa</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MKhau)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.IDkh }, new { @class = "delete-link" }) |
                @Html.ActionLink("Thông tin", "Details", new { id = item.IDkh }, new { @class = "delete-link" }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.IDkh }, new { @class = "delete-link" })
            </td>
        </tr>
    }
</table>
<style>
    .delete-link {
        color: red; /* Sửa màu trong đây nhaa*/
    }

        .delete-link:hover {
            color: darkred; /* Sửa màu trong đây nhaa*/
        }
</style>
