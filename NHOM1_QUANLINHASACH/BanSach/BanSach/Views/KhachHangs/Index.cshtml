@model IEnumerable<BanSach.Models.KhachHang>

@{
    ViewBag.Title = "Quản lý danh sách khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .tieude {
        text-align: center;
        font-weight: bold;
    }

    .them a {
        border-radius: 10px;
        background-color: #212121;
        color: white;
        font-size: large;
        padding: 5px;
        margin: 50px 10px 0 10px;
    }

        .them a:hover {
            text-decoration: none;
            color: white;
            background-color: #027171;
        }

    .table-striped {
        width: 100%;
    }
</style>

<h2 class="tieude">Danh sách khách hàng</h2>

<p class="them">
    @Html.ActionLink("Thêm khách hàng", "Create")
</p>
<table class="table table-condensed bg-black" width="100%">
    <tr class="text-center" style=" color: white; text-align: left; background-color:#3b3636;">
        <th  style="border-top-left-radius: 25px;" >
            ID
        </th>
        <th >
            Tên KH
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Tài khoản
        </th>
        <th>
            Mật khẩu
        </th>
        <th style="border-top-right-radius: 25px;">Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.IDkh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
            <td>
                @(item.SoDT != null && item.SoDT.Length >= 3 ? item.SoDT.Substring(0, 3) + new string('*', item.SoDT.Length - 3) : "")
            </td>
            <td class="text-danger">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TKhoan)
            </td>
            <td>
                @Html.Raw("********")
            </td>

            <td>
                @Html.ActionLink("Sửa", "EditAD", new { id = item.IDkh }, new { @class = "btn btn-warning btn-sm rounded-sm" })
                @Html.ActionLink("Xoá", "Delete", new { id = item.IDkh }, new { @class = "btn btn-danger btn-sm rounded-sm" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDkh }, new { @class = "btn btn-info btn-sm rounded-sm" })
            </td>
        </tr>
    }
</table>
<style>
    .delete-link {
        color: red; /* Sửa màu trong đây nhaa*/
    }

        .delete-link:hover {
            color: darkred; /* Sửa màu trong đây nhaa*/
        }
</style>
