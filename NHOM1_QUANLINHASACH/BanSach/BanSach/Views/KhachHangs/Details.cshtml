@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center">
            <h2 class="text-center text-white"> Thông tin tài khoản</h2>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3 align-items-center">
                <div class="col-md-4 text-right font-weight-bold"><i class="fas fa-user"></i> Tên:</div>
                <div class="col-md-8">
                    <span class="text-dark">@Html.DisplayFor(model => model.TenKH)</span>
                </div>
            </div>
            <hr>
            <div class="row mb-3 align-items-center">
                <div class="col-md-4 text-right font-weight-bold"><i class="fas fa-phone-alt"></i> Số điện thoại:</div>
                <div class="col-md-8">
                    <span class="text-dark">@Html.DisplayFor(model => model.SoDT)</span>
                </div>
            </div>
            <hr>
            <div class="row mb-3 align-items-center">
                <div class="col-md-4 text-right font-weight-bold"><i class="fas fa-envelope"></i> Email:</div>
                <div class="col-md-8">
                    <span class="text-dark">@Html.DisplayFor(model => model.Email)</span>
                </div>
            </div>
            <hr>
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Tài khoản:</div>
                <div class="col-md-8">
                    <span class="text-dark">@Model.TKhoan.Substring(0, 2)****</span> 
                </div>
            </div>

            <hr>
            <div class="row mb-3 align-items-center">
                <div class="col-md-4 text-right font-weight-bold"><i class="fas fa-key"></i> Mật khẩu:</div>
                <div class="col-md-8">
                    <span class="text-dark">********</span> 
                </div>
            </div>
            <div class="text-center mt-4">
                @Html.ActionLink("Cập nhật", "Edit", new { id = Model.IDkh }, new { @class = "btn btn-success btn-lg px-5 rounded-sm shadow-sm" })
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        font-weight: bold;
        padding: 20px;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .container {
        max-width: 700px;
    }

    .row > .col-md-4 {
        color: #6c757d;
    }

    hr {
        border-top: 1px solid #e0e0e0;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>
